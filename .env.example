# Numeroly Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# FRONTEND (React Native / Expo)
# ============================================================================

# API Configuration
# Base URL for REST API (include /v1 suffix)
EXPO_PUBLIC_API_URL=http://localhost:8000/v1

# ============================================================================
# BACKEND (FastAPI)
# ============================================================================

# Application Settings
APP_NAME=Numeroly API
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Database (PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://numeroly:[your-db-password]@localhost:5432/numeroly
DATABASE_ECHO=False

# Redis Cache & Session Storage
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=[replace-with-secure-random-string-min-32-chars]
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# AZURE SERVICES
# ============================================================================

# Azure OpenAI - Core Configuration
# Docs: https://learn.microsoft.com/en-us/azure/ai-services/openai/
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Azure OpenAI - Speech-to-Text (STT) Deployment
# Using gpt-4o-mini-transcribe: 12x cheaper than Azure Speech Services, 54% better accuracy
# Region: eastus2 (public preview 2025)
AZURE_OPENAI_STT_DEPLOYMENT_NAME=gpt-4o-mini-transcribe

# Azure OpenAI - Reasoning & Agent Logic Deployment
# Using gpt-4o-mini for numerology calculations and agent conversation
AZURE_OPENAI_REASONING_DEPLOYMENT_NAME=gpt-4o-mini

# ============================================================================
# EXTERNAL AI/ML APIs
# ============================================================================

# ElevenLabs - Text-to-Speech (Vietnamese voice synthesis)
# Natural voice synthesis with emotional modulation for numerology responses
# Docs: https://elevenlabs.io/docs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=default  # TBD: Vietnamese warm voice ID from ElevenLabs

# ============================================================================
# NOTES
# ============================================================================
#
# SECURITY:
# 1. NEVER commit .env file to version control
# 2. Change JWT_SECRET_KEY to a strong random value for production (min 32 chars)
# 3. Use environment-specific .env files (development, staging, production)
# 4. Rotate API keys regularly
# 5. For production, use Azure Key Vault instead of .env files
#
# LOCAL DEVELOPMENT:
# - Use docker-compose.yml to start PostgreSQL and Redis
# - Command: docker-compose up -d
# - PostgreSQL: localhost:5432
# - Redis: localhost:6379
