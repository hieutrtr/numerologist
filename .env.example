# Numeroly Complete Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# FRONTEND (React Native / Expo)
# ============================================================================

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000/v1
EXPO_PUBLIC_WS_URL=ws://localhost:8000/ws

# Azure AD B2C
EXPO_PUBLIC_AZURE_AD_B2C_TENANT_NAME=your_tenant_name
EXPO_PUBLIC_AZURE_AD_B2C_CLIENT_ID=your_client_id
EXPO_PUBLIC_AZURE_AD_B2C_POLICY_NAME=B2C_1_phone_signup_signin

# Sentry Error Tracking (Optional)
EXPO_PUBLIC_SENTRY_DSN=

# ============================================================================
# BACKEND (FastAPI)
# ============================================================================

# Application
APP_NAME=Numeroly API
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://numeroly:[your-db-password]@localhost:5432/numeroly
DATABASE_ECHO=False

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=[replace-with-secure-random-string]
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# AZURE INFRASTRUCTURE
# ============================================================================

# Azure Subscription & Tenant
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_RESOURCE_GROUP=numeroly-resources
AZURE_REGION=southeastasia

# Azure OpenAI - Speech-to-Text (gpt-4o-mini-transcribe)
# Cost-optimized: 12x cheaper than Azure Speech Services, 54% better accuracy
# Availability: eastus2 region (public preview 2025)
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini-transcribe
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Azure Storage - Audio Files
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER_NAME=conversation-audio

# Azure AD B2C
AZURE_AD_B2C_TENANT_ID=your_tenant_id
AZURE_AD_B2C_CLIENT_ID=your_client_id
AZURE_AD_B2C_CLIENT_SECRET=your_client_secret
AZURE_AD_B2C_POLICY_NAME=B2C_1_phone_signup_signin

# ============================================================================
# EXTERNAL AI/ML APIs
# ============================================================================

# OpenAI - GPT-4 for Conversation AI
OPENAI_API_KEY=sk_your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# ElevenLabs - Text-to-Speech (Vietnamese voice synthesis)
# Natural voice with emotional modulation for numerology responses
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=default  # TBD: Specific Vietnamese warm voice ID from ElevenLabs

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry - Error Tracking (Optional)
SENTRY_DSN=

# Application Insights (Azure Monitor)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# ============================================================================
# SECURITY & CORS
# ============================================================================

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:19006,http://localhost:3000

# ============================================================================
# DOCKER & DEPLOYMENT
# ============================================================================

# Docker Registry (for building images)
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=

# ============================================================================
# OPTIONAL: FEATURE FLAGS
# ============================================================================

# Feature Toggles
ENABLE_MOCK_SERVICES=False
ENABLE_DEBUG_LOGGING=False
ENABLE_RATE_LIMITING=True

# ============================================================================
# NOTES
# ============================================================================
# 
# IMPORTANT SECURITY NOTES:
# 1. NEVER commit .env file to version control
# 2. Change JWT_SECRET_KEY to a strong random value for production
# 3. Use environment-specific .env files (dev, staging, production)
# 4. Rotate API keys regularly
# 5. For production, use Azure Key Vault instead of .env files
#
# LOCAL DEVELOPMENT:
# - Use provided docker-compose.yml to start PostgreSQL and Redis
# - Command: docker-compose up -d
# - Database will be available at localhost:5432
# - Redis will be available at localhost:6379
#
# GETTING API KEYS:
# - OpenAI: https://platform.openai.com/api-keys
# - Azure: https://portal.azure.com
# - ElevenLabs: https://elevenlabs.io/app/speech-synthesis
#
